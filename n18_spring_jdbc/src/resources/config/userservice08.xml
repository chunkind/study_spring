<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
		
	<util:properties id="sql" location="resources/sql/spring-userservice-sql.properties" />

	<!-- <context:component-scan base-package="spring.service.user" /> -->
	
	<bean id="sqlService" class="spring.service.user.impl.SqlServiceImpl06">
		<property name="sqlMap" ref="sql" />
	</bean>
	
	<!-- Annotation으로도 생략할수 없는 부분이다. -->
	<bean id="springJdbcUserDaoImpl08" class="spring.service.user.impl.SpringJdbcUserDaoImpl08">
		<property name="dataSource" ref="dataSource04" />
		<property name="sqlService" ref="sqlService" />
	</bean>

	<bean id="springUserServiceImpl08" class="spring.service.user.impl.SpringUserServiceImpl08">
		<property name="userDao" ref="springJdbcUserDaoImpl08" />
	</bean>
</beans>

